<?xml version="1.0"?>
<listing xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Ui:etc/ui_configuration.xsd">
    <argument name="data" xsi:type="array">
        <item name="js_config" xsi:type="array">
            <item name="provider" xsi:type="string">alphateam_cashbackwallet_listing.alphateam_cashbackwallet_listing_data_source</item>
            <item name="deps" xsi:type="string">alphateam_cashbackwallet_listing.alphateam_cashbackwallet_listing_data_source</item>
        </item>
    </argument>
    <settings>
        <spinner>alphateam_cashbackwallet_listing_columns</spinner>
        <deps>
            <dep>alphateam_cashbackwallet_listing.alphateam_cashbackwallet_listing_data_source</dep>
        </deps>
    </settings>
    <dataSource name="alphateam_cashbackwallet_listing_data_source" component="Magento_Ui/js/grid/provider">
        <settings>
            <storageConfig>
                <param name="indexField" xsi:type="string">entity_id</param>
            </storageConfig>
            <updateUrl path="mui/index/render"/>
        </settings>
        <aclResource>AlphaTeam_CashbackWallet::manage_cashbackwallet</aclResource>
        <dataProvider class="Magento\Framework\View\Element\UiComponent\DataProvider\DataProvider"
                      name="alphateam_cashbackwallet_listing_data_source">
            <settings>
                <requestFieldName>entity_id</requestFieldName>
                <primaryFieldName>entity_id</primaryFieldName>
            </settings>
        </dataProvider>
    </dataSource>
    <listingToolbar name="listing_top">
        <bookmark name="bookmarks"/>
        <columnsControls name="columns_controls"/>
        <filters name="listing_filters"/>
        <paging name="listing_paging"/>
        <exportButton name="export_button"/>
    </listingToolbar>
    <columns name="alphateam_cashbackwallet_listing_columns">
        <selectionsColumn name="ids">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="indexField" xsi:type="string">entity_id</item>
                </item>
            </argument>
        </selectionsColumn>
        <column name="entity_id">
            <settings>
                <filter>textRange</filter>
                <label translate="true">ID</label>
                <sorting>asc</sorting>
            </settings>
        </column>
        <column name="customer_id">
            <settings>
                <filter>text</filter>
                <label translate="true">Customer ID</label>
                <sorting>asc</sorting>
            </settings>
        </column>
        <column name="balance">
            <settings>
                <filter>textRange</filter>
                <label translate="true">Balance</label>
                <sorting>asc</sorting>
            </settings>
        </column>
        <column name="total_earned">
            <settings>
                <filter>textRange</filter>
                <label translate="true">Total Earned</label>
                <sorting>asc</sorting>
            </settings>
        </column>
        <column name="total_used">
            <settings>
                <filter>textRange</filter>
                <label translate="true">Total Used</label>
                <sorting>asc</sorting>
            </settings>
        </column>
        <column name="status">
            <settings>
                <filter>text</filter>
                <label translate="true">Status</label>
            </settings>
        </column>
        <column name="last_updated">
            <settings>
                <filter>dateRange</filter>
                <label translate="true">Last Updated</label>
                <sorting>asc</sorting>
            </settings>
        </column>
        <column name="created_at">
            <settings>
                <filter>dateRange</filter>
                <label translate="true">Created At</label>
                <sorting>asc</sorting>
            </settings>
        </column>
    </columns>
</listing>
