<?xml version="1.0"?>
<schema xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:framework:Setup/Declaration/Schema/etc/schema.xsd">
    <table name="alphateam_cashbackwallet_balance" resource="default" engine="innodb" comment="Cashback Wallet">
        <column xsi:type="int" name="entity_id" unsigned="true" nullable="false" identity="true" comment="Entity Id"/>
        <column xsi:type="int" name="customer_id" unsigned="true" nullable="false" comment="Customer Id"/>
        <column xsi:type="decimal" name="balance" precision="12" scale="4" unsigned="true" nullable="false" default="0.0000" comment="Balance"/>
        <column xsi:type="decimal" name="total_earned" precision="12" scale="4" unsigned="true" nullable="false" default="0.0000" comment="Total Earned"/>
        <column xsi:type="decimal" name="total_used" precision="12" scale="4" unsigned="true" nullable="false" default="0.0000" comment="Total Used"/>
        <column xsi:type="tinyint" name="status" unsigned="true" nullable="false" default="1" comment="Status"/>
        <column xsi:type="timestamp" name="last_updated" nullable="false" default="CURRENT_TIMESTAMP" on_update="CURRENT_TIMESTAMP" comment="Last Updated"/>
        <column xsi:type="timestamp" name="created_at" nullable="false" default="CURRENT_TIMESTAMP" comment="Created At"/>
        <constraint xsi:type="primary" referenceId="PRIMARY">
            <column name="entity_id"/>
        </constraint>
        <index name="IDX_CUSTOMER_ID">
            <column name="customer_id"/>
        </index>
        <constraint xsi:type="foreign" referenceId="FK_CUSTOMER_ID" table="alphateam_cashbackwallet_balance" column="customer_id"
                    referenceTable="customer_entity" referenceColumn="entity_id"
                    onDelete="CASCADE"/>
    </table>
</schema>
