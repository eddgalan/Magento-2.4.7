<?xml version="1.0"?>
<listing xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Ui:etc/ui_configuration.xsd">
    <argument name="data" xsi:type="array">
        <item name="js_config" xsi:type="array">
            <item name="provider" xsi:type="string">alphateam_sales_order_details_listing.alphateam_report_listing_data_source</item>
            <item name="deps" xsi:type="string">alphateam_sales_order_details_listing.alphateam_report_listing_data_source</item>
        </item>
    </argument>
    <settings>
        <spinner>alphateam_sales_order_details_listing_columns</spinner>
        <deps>
            <dep>alphateam_sales_order_details_listing.alphateam_report_listing_data_source</dep>
        </deps>
    </settings>
    <dataSource name="alphateam_report_listing_data_source" component="Magento_Ui/js/grid/provider">
        <settings>
            <storageConfig>
                <param name="indexField" xsi:type="string">entity_id</param>
            </storageConfig>
            <updateUrl path="mui/index/render"/>
        </settings>
        <!--
        <aclResource>AlphaTeam_Report::manage_report</aclResource>
        -->
        <dataProvider class="AlphaTeam\Report\Ui\DataProvider\SalesOrderDetailsDataProvider"
                      name="alphateam_report_listing_data_source">
            <settings>
                <requestFieldName>entity_id</requestFieldName>
                <primaryFieldName>entity_id</primaryFieldName>
            </settings>
        </dataProvider>
    </dataSource>
    <listingToolbar name="listing_top">
        <bookmark name="bookmarks"/>
        <columnsControls name="columns_controls"/>
        <filters name="listing_filters"/>
        <paging name="listing_paging"/>
        <exportButton name="export_button"/>
    </listingToolbar>
    <columns name="alphateam_sales_order_details_listing_columns">
        <selectionsColumn name="ids">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="indexField" xsi:type="string">entity_id</item>
                </item>
            </argument>
        </selectionsColumn>
        <column name="entity_id">
            <settings>
                <label translate="true">Order ID</label>
                <sorting>asc</sorting>
            </settings>
        </column>

        <column name="increment_id">
            <settings>
                <label translate="true">Order #</label>
            </settings>
        </column>

        <column name="state">
            <settings>
                <label translate="true">State</label>
            </settings>
        </column>

        <column name="status">
            <settings>
                <label translate="true">Status</label>
            </settings>
        </column>

        <column name="customer_email">
            <settings>
                <label translate="true">Customer Email</label>
            </settings>
        </column>

        <column name="subtotal">
            <settings>
                <label translate="true">Subtotal</label>
                <filter>textRange</filter>
            </settings>
        </column>

        <column name="discount_amount">
            <settings>
                <label translate="true">Order Discount</label>
                <filter>textRange</filter>
            </settings>
        </column>

        <column name="coupon_code">
            <settings>
                <label translate="true">Coupon Code</label>
            </settings>
        </column>

        <column name="shipping_amount">
            <settings>
                <label translate="true">Shipping</label>
                <filter>textRange</filter>
            </settings>
        </column>

        <column name="tax_amount">
            <settings>
                <label translate="true">Tax</label>
                <filter>textRange</filter>
            </settings>
        </column>

        <column name="grand_total">
            <settings>
                <label translate="true">Grand Total</label>
                <filter>textRange</filter>
            </settings>
        </column>

        <column name="total_paid">
            <settings>
                <label translate="true">Total Paid</label>
                <filter>textRange</filter>
            </settings>
        </column>

        <column name="total_refunded">
            <settings>
                <label translate="true">Total Refunded</label>
                <filter>textRange</filter>
            </settings>
        </column>

        <column name="created_at">
            <settings>
                <label translate="true">Created At</label>
                <filter>dateRange</filter>
            </settings>
        </column>

        <!-- Campos de item -->
        <column name="sku">
            <settings>
                <label translate="true">SKU</label>
            </settings>
        </column>

        <column name="name">
            <settings>
                <label translate="true">Product Name</label>
            </settings>
        </column>

        <column name="product_type">
            <settings>
                <label translate="true">Product Type</label>
            </settings>
        </column>

        <column name="base_price">
            <settings>
                <label translate="true">Base Price</label>
                <filter>textRange</filter>
            </settings>
        </column>

        <column name="item_discount_amount">
            <settings>
                <label translate="true">Item Discount</label>
                <filter>textRange</filter>
            </settings>
        </column>

        <column name="qty_ordered">
            <settings>
                <label translate="true">Qty Ordered</label>
                <filter>textRange</filter>
            </settings>
        </column>

        <column name="qty_invoiced">
            <settings>
                <label translate="true">Qty Invoiced</label>
                <filter>textRange</filter>
            </settings>
        </column>

        <column name="qty_shipped">
            <settings>
                <label translate="true">Qty Shipped</label>
                <filter>textRange</filter>
            </settings>
        </column>

        <column name="qty_refunded">
            <settings>
                <label translate="true">Qty Refunded</label>
                <filter>textRange</filter>
            </settings>
        </column>

        <!-- Pago -->
        <column name="payment_method">
            <settings>
                <label translate="true">Payment Method</label>
            </settings>
        </column>
    </columns>
</listing>
